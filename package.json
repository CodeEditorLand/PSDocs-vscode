{
  "name": "psdocs-vscode",
  "displayName": "PSDocs.Azure (Preview)",
  "version": "0.0.1",
  "private": true,
  "description": "Generate Markdown from ARM templates using PSDocs.Azure",
  "bugs": {
    "url": "https://github.com/Microsoft/PSDocs-vscode/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/PSDocs-vscode.git"
  },
  "license": "SEE LICENSE IN LICENSE",
  "author": {
    "name": "Vic Perdana"
  },
  "publisher": "vicperdana",
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "esbuild": "npm run -S esbuild-base -- --sourcemap",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild-watch": "npm run -S esbuild-base -- --sourcemap --watch",
    "pack": "vsce package",
    "publish": "vsce publish",
    "vscode:prepublish": "npm run -S esbuild-base -- --minify",
    "watch": "tsc -watch -p ./"
  },
  "contributes": {
    "commands": [
      {
        "command": "vicperdana.psdocs-vscode-preview",
        "title": "PSDocs.Azure: Generate Markdown"
      }
    ],
    "snippets": [
      {
        "language": "arm-template",
        "path": "./snippets/arm.json"
      }
    ]
  },
  "activationEvents": [
    "onCommand:vicperdana.psdocs-vscode-preview"
  ],
  "dependencies": {
    "@vscode/vsce": "^2.23.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.19",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.20.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3",
    "vscode-test": "^1.6.1"
  },
  "extensionDependencies": [
    "ms-vscode.powershell",
    "msazurermtools.azurerm-vscode-tools",
    "vscode.powershell"
  ],
  "icon": "images/psdocs-icon.png",
  "galleryBanner": {
    "color": "#0072c6",
    "theme": "dark"
  },
  "preview": true
}
