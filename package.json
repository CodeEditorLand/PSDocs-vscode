{
	"activationEvents": [
		"onCommand:vicperdana.psdocs-vscode-preview"
	],
	"contributes": {
		"commands": [
			{
				"command": "vicperdana.psdocs-vscode-preview",
				"title": "PSDocs.Azure: Generate Markdown"
			}
		],
		"snippets": [
			{
				"language": "arm-template",
				"path": "./snippets/arm.json"
			}
		]
	},
	"dependencies": {
		"@vscode/vsce": "2.24.0"
	},
	"description": "Generate Markdown from ARM templates using PSDocs.Azure",
	"devDependencies": {
		"@types/glob": "8.1.0",
		"@types/mocha": "10.0.6",
		"@types/node": "20.11.30",
		"@types/vscode": "1.87.0",
		"esbuild": "0.20.2",
		"glob": "10.3.10",
		"mocha": "10.3.0",
		"typescript": "5.4.2",
		"typescript-esbuild": "0.4.5",
		"vscode-test": "1.6.1"
	},
	"displayName": "PSDocs.Azure (Preview)",
	"extensionDependencies": [
		"ms-vscode.powershell",
		"msazurermtools.azurerm-vscode-tools",
		"vscode.powershell"
	],
	"galleryBanner": {
		"color": "#0072c6",
		"theme": "dark"
	},
	"icon": "images/psdocs-icon.png",
	"main": "./out/extension.js",
	"name": "psdocs-vscode",
	"preview": true,
	"scripts": {
		"compile": "tsc -p ./",
		"esbuild": "npm run -S esbuild-base -- --sourcemap",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
		"esbuild-watch": "npm run -S esbuild-base -- --sourcemap --watch",
		"pack": "vsce package",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"publish": "vsce publish",
		"vscode:prepublish": "npm run -S esbuild-base -- --minify",
		"watch": "tsc -watch -p ./"
	},
	"type": "module"
}
